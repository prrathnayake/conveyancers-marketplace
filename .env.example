SMTP_PORT=587
SMTP_USERNAME=username
SMTP_PASSWORD=password
SMTP_FROM_ADDRESS=admin@example.com

# Provide working Twilio credentials to send SMS. Missing credentials now
# trigger logged errors and the application surfaces the failure to callers.
