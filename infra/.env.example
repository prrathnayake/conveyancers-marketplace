# Copy this file to .env and customise values for local development.
# Secrets are intentionally not committed; update the placeholders before running docker compose.

# Database configuration
POSTGRES_DB=convey
POSTGRES_USER=app
POSTGRES_PASSWORD=change-me
POSTGRES_PORT=5432

# Redis connection
REDIS_URL=redis://redis:6379

# Object storage
MINIO_ENDPOINT=http://minio:9000
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=change-me
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=change-me

# Authentication
JWT_SECRET=change-me

# Frontend fallbacks used for deterministic seeds in development
PROFILE_FALLBACK_SECRET=replace-with-base64-secret
PROFILE_FALLBACK_PAYLOAD=replace-with-base64-payload

# Grafana admin credentials
GF_SECURITY_ADMIN_PASSWORD=change-me

# Payment provider configuration
PSP_PROVIDER=sandbox
PSP_SECRET=change-me

# ClamAV configuration
CLAMAV_HOST=clamav
CLAMAV_PORT=3310
